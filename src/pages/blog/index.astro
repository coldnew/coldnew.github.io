---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import { Docs } from '../../components/Docs';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { source } from '../../lib/source';
import '../../styles/global.css';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const tree = source.getPageTree();
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="light">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Docs tree={tree} pathname={pathname} client:load>
      <div class="prose max-w-none">
        <h1>Blog Posts</h1>
        <div class="grid gap-4 not-prose">
          {
            posts.map((post) => (
              <a
                href={`/blog/${post.id}/`}
                class="block rounded-lg border border-fd-border bg-fd-card p-4 hover:border-fd-primary transition-colors"
              >
                <h2 class="text-lg font-semibold text-fd-foreground">
                  {post.data.title}
                </h2>
                <p class="text-sm text-fd-muted-foreground mt-1">
                  {post.data.description}
                </p>
              </a>
            ))
          }
        </div>
      </div>
    </Docs>
    <script>
      function initCodeBlocks() {
        document.querySelectorAll('.shiki').forEach((el) => {
          const classes = el.className.split(' ');
          const idx = classes.indexOf('shiki-themes');
          if (idx !== -1) {
            classes.splice(idx, 0, 'shiki');
          } else {
            classes.push('shiki', 'shiki-themes', 'github-light', 'github-dark');
          }
          el.className = classes.join(' ');
        });

        document.querySelectorAll('[aria-label="Copy Text"]').forEach((btn) => {
          btn.addEventListener('click', async (e) => {
            e.preventDefault();
            e.stopPropagation();
            const codeBlock = btn.closest('.shiki');
            const code = codeBlock?.querySelector('code');
            const text = code?.innerText;
            if (text) {
              await navigator.clipboard.writeText(text);
              btn.setAttribute('data-checked', 'true');
              setTimeout(() => btn.removeAttribute('data-checked'), 2000);
            }
          }, true);
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initCodeBlocks);
      } else {
        initCodeBlocks();
      }

      document.addEventListener('astro:page-load', initCodeBlocks);
    </script>
  </body>
</html>
