---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import { Docs } from '../../components/Docs';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { source } from '../../lib/source';
import '../../styles/global.css';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const tree = source.getPageTree();
const pathname = Astro.url.pathname;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Docs tree={tree} pathname={pathname} client:load>
      <div class="prose max-w-none">
        <h1>Blog Posts</h1>
        <div class="grid gap-4 not-prose">
          {
            posts.map((post) => (
              <a
                href={`/blog/${post.id}/`}
                class="block rounded-lg border border-fd-border bg-fd-card p-4 hover:border-fd-primary transition-colors"
              >
                <h2 class="text-lg font-semibold text-fd-foreground">
                  {post.data.title}
                </h2>
                <p class="text-sm text-fd-muted-foreground mt-1">
                  {post.data.description}
                </p>
              </a>
            ))
          }
        </div>
      </div>
    </Docs>
  </body>
</html>
