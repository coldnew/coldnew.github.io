---
import { source } from '../lib/source';
import '../styles/global.css';

const _tree = source.getPageTree();
const _pathname = Astro.url.pathname;
const _q = Astro.url.searchParams.get('q') ?? undefined;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Docs tree={tree} pathname={pathname} disableBreadcrumb={true} disableFooter={true} client:load>
      <div class="prose max-w-none">
        <h1>Search</h1>
        <Search id="search" className="pagefind-ui" uiOptions={{ showImages: false }} query={q} />
        <div id="search-results"></div>
      </div>
    </Docs>
  </body>
</html>
